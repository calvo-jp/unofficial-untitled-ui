{
	"name": "@untitled-theme/icons-solid",
	"type": "module",
	"version": "0.10.1",
	"license": "MIT",
	"description": "Untitled UI icons for Solid",
	"keywords": ["svg", "icon", "icons", "Solid", "Solid Start", "Untitled UI"],
	"repository": "https://github.com/calvo-jp/untitled-theme",
	"bugs": {
		"url": "https://github.com/calvo-jp/untitled-theme/issues"
	},
	"author": {
		"name": "John Paul Calvo",
		"email": "calvojp92@gmail.com"
	},
	"main": "dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"import": "./dist/*.js"
		},
		"./package.json": {
			"default": "./package.json"
		}
	},
	"files": ["dist"],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "vite build",
		"prebuild": "pnpm --filter @untitled-theme/scripts run generate:icons -f solid",
		"release": "release-it"
	},
	"devDependencies": {
		"release-it": "17.4.0",
		"solid-js": "1.8.18",
		"typescript": "5.5.2",
		"vite": "5.3.2",
		"vite-plugin-dts": "3.9.1",
		"vite-plugin-solid": "2.10.2"
	},
	"peerDependencies": {
		"solid-js": ">=1.8.15"
	},
	"release-it": {
		"hooks": {
			"after:bump": ["pnpm build"]
		},
		"git": {
			"commitMessage": "chore: release ${npm.name} v${version}",
			"tagName": "${npm.name}@${version}"
		},
		"github": {
			"release": false
		}
	}
}
