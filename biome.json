{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"node_modules",
			"out",
			"dist",
			"build",
			".next",
			".vercel",
			".svelte-kit",
			"styled-system",
			"packages/icons/react/src",
			"packages/icons/svelte/src",
			"packages/icons/solid/src",
			"website/src/app/database.json"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noUselessElse": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"indentWidth": 2,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"bracketSpacing": false
		},
		"linter": {}
	}
}
